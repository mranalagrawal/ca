{
  "version": 2,
  "installCommand": "yarn install",
  "buildCommand": "nuxt build",
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "./.nuxt/dist/sitemap-routes.json"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/products/search:match*",
      "destination": "https://callmewine-api-staging.dojo.sh/api/products/search:match*"
    },
    {
      "source": "/blog",
      "has": [
        {
          "value": ".*stage.*",
          "type": "host"
        }
      ],
      "destination": "https://blog-stage.callmewine.com/"
    },
    {
      "source": "/blog/:match*",
      "has": [
        {
          "value": ".*stage.*",
          "type": "host"
        }
      ],
      "destination": "https://blog-stage.callmewine.com/:match*/"
    },
    {
      "source": "/blog",
      "missing": [
        {
          "value": ".*stage.*",
          "type": "host"
        }
      ],
      "destination": "https://blog.callmewine.com/"
    },
    {
      "source": "/blog/:match*",
      "missing": [
        {
          "value": ".*stage.*",
          "type": "host"
        }
      ],
      "destination": "https://blog.callmewine.com/:match*/"
    }
  ]
}
